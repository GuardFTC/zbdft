/* 页面容器 */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  overflow: hidden;
  flex-direction: column;
  padding-top: 150px;
}

/* 背景图 */
.background-image {
  position: absolute;
  top: 1;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  object-fit: cover;
}

/* 第1个 Card */
.card {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  margin-bottom: 20px;
  /* 两个卡片之间的间距 */
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 10px;
  padding: 6px;
  box-sizing: border-box;
  flex-direction: row;
  align-items: center;
  height: 45px;
  /* 设置卡片高度，使其更矮 */
}

/* 卡片内部排列样式：第一个卡片有下拉框、输入框和按钮 */
.card-item {
  display: flex;
  width: 100%;
  gap: 7px;
}

/* 下拉框样式 */
.dropdown {
  font-size: 14px;
  flex: 8;
  /* 增加 flex 值，让下拉框更宽 */
  padding: 6px;
  /* 减少下拉框的内边距 */
  border-radius: 5px;
  border: 1px solid #ccc;
  background-color: #fff;
}

/* 文本输入框样式 */
.text-input {
  font-size: 14px;
  flex: 8;
  /* 增加 flex 值，让输入框更宽 */
  padding: 6px;
  /* 减少输入框的内边距 */
  border-radius: 5px;
  border: 1px solid #ccc;
  background-color: #fff;
}

/* 清空按钮样式 */
.remove-button {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2px 6px;
  /* 减少按钮的内边距 */
  background-color: #b9f1a3 !important;
  color: rgb(102, 102, 102) !important;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 14px;
  white-space: nowrap;
}

/* 录入菜单按钮样式 */
.add-button {
  flex: 1;
  width: 20%;
  padding: 8px;
  /* 减少按钮的内边距 */
  background-color: #c5c4f8 !important;
  font-size: 14px;
  color: rgb(102, 102, 102) !important;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

/* 表格容器 */
.card-container {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 0 auto;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 10px;
  padding: 5px;
  overflow: hidden;
}

/* 表格样式 */
table {
  table-layout: fixed;
  border-collapse: collapse;
  width: 100%;
}

/* 表格头部样式 */
.table-header {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.6);
  font-weight: bold;
  border-bottom: 2px solid rgba(255, 255, 255, 0.6);
  text-align: center;
  width: 100%;
  font-size: 14px;
}

/* 表格行 */
.table-row {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid rgba(177, 171, 171, 0.6);
  text-align: center;
  width: 100%;
}

/* 单元格样式 */
.table-cell {
  flex: 1;
  padding: 5px;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  border-right: 1px solid rgba(177, 171, 171, 0.6);
  display: flex;
  flex-direction: column;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.6);
  box-sizing: border-box;
  font-size: 14px;
}

/* 日期列加宽，比例 3 */
.table-cell:nth-child(2),
.table-cell:nth-child(3) {
  flex: 3;
  justify-content: center;
}

/* 早餐列、午餐列、晚餐列的宽度，比例 2 */
.table-cell:nth-child(4) {
  flex: 4;
  text-align: center;
  margin-right: 8px;
}

/* 为最后一列去掉右边框 */
.table-cell:last-child {
  border-right: none;
}

/* 奇数行背景色 */
.table-row:nth-child(odd) {
  background-color: rgba(255, 255, 255, 0.6);
}

/* 偶数行背景色 */
.table-row:nth-child(even) {
  background-color: rgba(255, 255, 255, 0.6);
}

/* 操作列按钮容器 */
.action-buttons {
  display: flex;
  justify-content: flex-start;
  /* 设置为左对齐 */
  gap: 5px;
  /* 添加按钮间距 */
  align-items: center;
  width: 100%;
  padding-left: 1px;
  /* 这里加上左内边距，确保按钮不紧贴左侧 */
}

/* 操作按钮样式 */
.action-button {
  padding: 4px 8px;
  font-size: 13px;
  background-color: #F6E4CE;
  color: rgb(102, 102, 102);
  border: none;
  border-radius: 5px;
  cursor: pointer;
  box-sizing: border-box;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 编辑按钮 */
.edit-button {
  background-color: #c4e3f8 !important;
}

/* 删除按钮 */
.delete-button {
  background-color: #f8ccc4 !important;
  margin-left: auto;
  /* 删除按钮向左偏移 */
}

/* 禁用按钮的样式 */
.action-button[disabled] {
  background-color: #ccc;
  cursor: not-allowed;
}

/* 翻页按钮样式 */
.pagination-card-container {
  display: flex;
  justify-content: center;
  width: 90%;
  margin: 0 auto;
  margin-top: 20px;
}

.pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  max-width: 600px;
  padding: 0 20px;
}

/* 左右按钮样式 */
.pagination-button {
  padding: 6px 15px;
  background-color: #F6E4CE;
  color: rgb(102, 102, 102);
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 14px;
}

/* 禁用按钮的样式 */
.pagination-button[disabled] {
  background-color: #ccc;
  cursor: not-allowed;
}

/* 页码文本样式 */
.pagination-number {
  font-size: 16px;
  color: rgb(102, 102, 102);
  font-weight: bold;
  white-space: nowrap;
  text-align: center;
  display: inline-block;
  width: 80px;
  border-radius: 5px;
  padding: 5px 0;
  margin: 0 10px;
  font-size: 14px;
}

/* 隐藏 ID 列 */
.hidden-id {
  display: none;
}

/* 模态框容器 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  /* 半透明背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

/* 模态框内部容器 */
.modal-container {
  background-color: #fff;
  padding: 15px;
  border-radius: 10px;
  width: 80%;
  max-width: 500px;
}

/* 卡片样式 */
.modal-card1 {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
  width: 100%;
  gap: 15px; /* 卡片内的元素间距 */
}

/* 卡片样式 */
.modal-card2 {
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
  width: 100%;
  gap: 15px; /* 卡片内的元素间距 */
}

/* 下拉框和文本输入框样式 */
.model-dropdown, .model-text-input {
  width: 93%;
  font-size: 14px;
  border-radius: 5px;
  padding: 10px;
  border: 1px solid #ccc;
  background-color: #fff;
}

/* 确认和取消按钮横向排列 */
.modal-card .modal-action-button {
  width: 50%; /* 确保按钮宽度相等 */
  padding: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

/* 确认按钮样式 */
.modal-confirm-button {
  background-color: #F6E4CE;
  color: rgb(134, 133, 133);
  float: left; /* 确保它靠左 */
}

/* 取消按钮样式 */
.modal-cancel-button {
  background-color: #ccc;
  color: #fff;
  float: right; /* 确保它靠右 */
}
